<Window x:Class="MemoryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryUI"
        mc:Ignorable="d"
        Title="kimochi" Height="800" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="FieldButtonStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Black"/>
            <EventSetter Event="Click" Handler="btnField_Click"/>
        </Style>
    </Window.Resources>
    <Grid Background="Black" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Center">
            <Image Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Source="D:\MemoryImages\kimochi.png"/>
        </Label>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="0" Grid.Row="1" >
            <StackPanel >
                <Image Source="D:\MemoryImages\back.png" Visibility="Collapsed" />
                <Image Source="D:\MemoryImages\1.png" Visibility="Visible" Height="100" Width="100"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="1" Grid.Row="1" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="2" Grid.Row="1" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="3" Grid.Row="1" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="0" Grid.Row="2" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="1" Grid.Row="2" >
            <StackPanel>
                <Image Source="D:\MemoryImages\back.png" Visibility="Collapsed"/>
                <Image Source="D:\MemoryImages\7.png" Visibility="Visible" Height="100" Width="100"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="2" Grid.Row="2" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="3" Grid.Row="2" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="0" Grid.Row="3" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="1" Grid.Row="3" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="2" Grid.Row="3" >
            <StackPanel>
                <Image Source="D:\MemoryImages\back.png" Visibility="Collapsed"/>
                <Image Source="D:\MemoryImages\3.png" Visibility="Visible" Height="100" Width="100"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="3" Grid.Row="3" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="0" Grid.Row="4" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="1" Grid.Row="4" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="2" Grid.Row="4" >
            <Image Source="D:\MemoryImages\back.png"/>
        </Button>
        <Button Style="{StaticResource FieldButtonStyle}" Grid.Column="3" Grid.Row="4" >
            <StackPanel>
                <Image Source="D:\MemoryImages\back.png" Visibility="Collapsed"/>
                <Image Source="D:\MemoryImages\4.png" Visibility="Visible" Height="100" Width="100"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnReset" Click="btnReset_Click" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="4" Margin="300,50,300,20" Background="#FF41257A" Foreground="White">
            <Image Source="D:\MemoryImages\reset.png" />
        </Button>
    </Grid>
</Window>
